{
    "name": "jaywood/woominecraft-wp",
    "description": "A minecraft donation plugin for WordPress",
    "type": "project",
    "license": "GPLv2",
    "scripts": {
        "phpcs": "phpcs",
        "post-install-cmd": "phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "woominecraft/woominecraft",
                "version": "1.1.2",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WooMinecraft/WooMinecraft/releases/download/1.1.2/WooMinecraft-1.1.2.zip"
                }
            }
        },
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require-dev": {
        "wpackagist-plugin/woocommerce": "^3.3",
        "composer/installers": "^1.5",
        "woominecraft/woominecraft": "1.1.2",
        "squizlabs/php_codesniffer": "3.*",
        "wp-coding-standards/wpcs": "^2.0"
    },
    "extra": {
        "installer-paths": {
            "vendor/wp-plugins/{$name}/": ["type:wordpress-plugin"]
        }
    }
}
